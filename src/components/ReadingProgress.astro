---
interface Props {
  bookId: string;
  chapterId: string;
}

const { bookId, chapterId } = Astro.props;
---

<div id="reading-progress" data-book={bookId} data-chapter={chapterId}></div>

<script define:vars={{ bookId, chapterId }}>
  // Save progress to server - just tracks which chapter you're on
  async function saveProgress() {
    try {
      const response = await fetch('/api/progress', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          bookId,
          chapterId,
        }),
      });

      if (!response.ok) {
        console.error('Failed to save progress:', response.status);
        const error = await response.json();
        console.error('Error details:', error);
        return;
      }
      console.log('Progress saved:', { bookId, chapterId });
    } catch (error) {
      console.error('Error saving progress:', error);
    }
  }

  // Save progress immediately when chapter loads
  document.addEventListener('DOMContentLoaded', () => {
    console.log('Chapter loaded, saving progress:', { bookId, chapterId });
    saveProgress();
  });
</script>
