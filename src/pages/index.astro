---
import Layout from '../layouts/Layout.astro';
import { getAllBooks } from '../lib/books';
import { getSupabaseClient } from '../lib/supabase.server';

const books = await getAllBooks();

// Get reading progress for all books
let progressMap: Record<string, any> = {};
if (Astro.locals.session) {
  const supabase = await getSupabaseClient(Astro);
  const { data } = await supabase
    .from('reading_progress')
    .select('*')
    .eq('user_id', Astro.locals.user!.id);

  if (data) {
    // Get the latest progress for each book
    for (const item of data) {
      const key = item.book_id;
      if (!progressMap[key] || new Date(item.last_read_at) > new Date(progressMap[key].last_read_at)) {
        progressMap[key] = item;
      }
    }
  }
}
---

<Layout title="Library">
  <div class="library-page">
    <header class="library-header">
      <h1>Library</h1>
      <p>Choose a book to start reading</p>
    </header>

    {books.length === 0 ? (
      <div class="empty-state">
        <p>No books available yet.</p>
        <p>Add books to the <code>src/content/books/</code> directory.</p>
      </div>
    ) : (
      <div class="books-grid">
        {books.map(book => {
          const progress = progressMap[book.id];
          return (
            <a href={`/books/${book.id}`} class="book-card-link">
              <article class="book-card">
                <div class="book-cover">
                  <img
                    src={`/books/${book.id}/cover.jpg`}
                    alt={`Cover of ${book.meta.title}`}
                    loading="lazy"
                  />
                  {progress && (
                    <div class="progress-indicator">
                      <div class="progress-bar" style={`width: ${progress.scroll_position * 100}%`}></div>
                    </div>
                  )}
                </div>
                <div class="book-info">
                  <h2 class="book-title">{book.meta.title}</h2>
                  <p class="book-author">{book.meta.author}</p>
                  <p class="book-description">{book.meta.description}</p>
                  <div class="book-meta">
                    <span>{book.chapters.length} chapters</span>
                    {progress && <span class="reading-progress">Reading</span>}
                  </div>
                </div>
              </article>
            </a>
          );
        })}
      </div>
    )}
  </div>
</Layout>

<style>
  .library-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .library-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .library-header h1 {
    font-size: 2.5rem;
    margin: 0 0 0.5rem 0;
  }

  .library-header p {
    color: var(--text-color);
    opacity: 0.7;
    margin: 0;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
  }

  .empty-state code {
    background: var(--card-bg);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
  }

  .books-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .book-card-link {
    text-decoration: none;
    color: inherit;
  }

  .book-card {
    background: var(--card-bg);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
    cursor: pointer;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .book-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .book-cover {
    position: relative;
    width: 100%;
    aspect-ratio: 2/3;
    overflow: hidden;
  }

  .book-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .progress-indicator {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: rgba(0, 0, 0, 0.3);
  }

  .progress-bar {
    height: 100%;
    background: var(--accent-color);
    transition: width 0.3s;
  }

  .book-info {
    padding: 1.25rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .book-title {
    font-size: 1.25rem;
    margin: 0 0 0.25rem 0;
    line-height: 1.3;
  }

  .book-author {
    color: var(--text-color);
    opacity: 0.7;
    margin: 0 0 0.75rem 0;
    font-size: 0.95rem;
  }

  .book-description {
    font-size: 0.9rem;
    line-height: 1.5;
    opacity: 0.8;
    margin: 0 0 1rem 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .book-meta {
    margin-top: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.85rem;
    color: var(--text-color);
    opacity: 0.6;
  }

  .reading-progress {
    color: var(--accent-color);
    font-weight: 500;
  }

  @media (max-width: 640px) {
    .books-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1rem;
    }

    .library-header h1 {
      font-size: 2rem;
    }
  }
</style>
