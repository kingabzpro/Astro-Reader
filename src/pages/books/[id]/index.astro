---
import Layout from '../../../layouts/Layout.astro';
import { getBook } from '../../../lib/books';
import { getSupabaseClient } from '../../../lib/supabase.server';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/404');
}

const book = await getBook(id);

if (!book) {
  return Astro.redirect('/404');
}

// Get reading progress for this book
let currentProgress = null;
if (Astro.locals.session) {
  const supabase = await getSupabaseClient(Astro);
  const { data } = await supabase
    .from('reading_progress')
    .select('*')
    .eq('user_id', Astro.locals.user!.id)
    .eq('book_id', id)
    .order('last_read_at', { ascending: false })
    .limit(1);

  if (data && data.length > 0) {
    currentProgress = data[0];
  }
}

// Determine where to start reading
const startChapter = currentProgress?.chapter_id || book.chapters[0];
---

<Layout title={book.meta.title}>
  <div class="book-detail-page">
    <div class="book-detail-header">
      <div class="book-cover-large">
        <img
          src={`/books/${book.id}/cover.jpg`}
          alt={`Cover of ${book.meta.title}`}
        />
      </div>
      <div class="book-detail-info">
        <h1 class="book-detail-title">{book.meta.title}</h1>
        <p class="book-detail-author">by {book.meta.author}</p>
        <p class="book-detail-description">{book.meta.description}</p>
        <div class="book-detail-meta">
          <span>{book.chapters.length} chapters</span>
          {currentProgress && <span class="continue-badge">Continue Reading</span>}
        </div>
        <a href={`/books/${book.id}/${startChapter}`} class="btn primary-btn">
          {currentProgress ? 'Continue Reading' : 'Start Reading'}
        </a>
      </div>
    </div>

    <div class="chapters-list">
      <h2>Chapters</h2>
      <div class="chapters-grid">
        {book.chapters.map((chapter, index) => (
          <a href={`/books/${book.id}/${chapter}`} class="chapter-item">
            <span class="chapter-number">Chapter {index + 1}</span>
            <span class="chapter-name">{chapter.replace(/-/g, ' ').replace(/^./, c => c.toUpperCase())}</span>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>

<style>
  .book-detail-page {
    max-width: 1000px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .book-detail-header {
    display: flex;
    gap: 2.5rem;
    margin-bottom: 4rem;
    align-items: flex-start;
  }

  .book-cover-large {
    flex-shrink: 0;
    width: 250px;
  }

  .book-cover-large img {
    width: 100%;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .book-detail-info {
    flex: 1;
  }

  .book-detail-title {
    font-size: 2.5rem;
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }

  .book-detail-author {
    font-size: 1.25rem;
    color: var(--text-color);
    opacity: 0.7;
    margin: 0 0 1.5rem 0;
  }

  .book-detail-description {
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .book-detail-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    font-size: 0.9rem;
    color: var(--text-color);
    opacity: 0.7;
  }

  .continue-badge {
    background: var(--accent-color);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.85rem;
    opacity: 1;
  }

  .primary-btn {
    display: inline-block;
    padding: 1rem 2rem;
    background: var(--accent-color);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 500;
    transition: background 0.2s;
  }

  .primary-btn:hover {
    background: var(--accent-hover);
  }

  .chapters-list h2 {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
  }

  .chapters-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
  }

  .chapter-item {
    display: flex;
    flex-direction: column;
    padding: 1rem 1.25rem;
    background: var(--card-bg);
    border-radius: 8px;
    text-decoration: none;
    color: var(--text-color);
    transition: background 0.2s, transform 0.2s;
  }

  .chapter-item:hover {
    background: var(--border-color);
    transform: translateX(4px);
  }

  .chapter-number {
    font-size: 0.8rem;
    color: var(--accent-color);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
  }

  .chapter-name {
    font-size: 1.1rem;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .book-detail-header {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .book-cover-large {
      width: 200px;
    }

    .book-detail-title {
      font-size: 2rem;
    }

    .book-detail-meta {
      justify-content: center;
    }

    .chapters-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
