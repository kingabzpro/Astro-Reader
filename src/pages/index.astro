---
import Layout from '../layouts/Layout.astro';
import { getAllBooks } from '../lib/books';
import { getAllReadingProgress } from '../lib/database';

const books = await getAllBooks();

// Get reading progress for all books
let progressMap: Record<string, any> = {};
if (Astro.locals.session && Astro.locals.user) {
  const progressList = await getAllReadingProgress(Astro.locals.user.id);

  // Get the latest progress for each book
  for (const item of progressList) {
    const key = item.bookId;
    if (!progressMap[key] || new Date(item.lastReadAt) > new Date(progressMap[key].lastReadAt)) {
      progressMap[key] = item;
    }
  }
}
---
<Layout title="Library">
  <div class="library-page">
    <header class="library-header">
      <h1>Library</h1>
      <p>Choose a book to start reading</p>
    </header>

    {books.length === 0 ? (
      <div class="empty-state">
        <p>No books available yet.</p>
        <p>Add books to the <code>src/content/books/</code> directory.</p>
      </div>
    ) : (
      <div class="books-grid">
        {books.map(book => {
          const progress = progressMap[book.id];
          return (
            <a href={`/books/${book.id}`} class="book-card-link">
              <article class="book-card">
                <div class="book-cover">
                  <img
                    src={`/books/${book.id}/cover.jpg`}
                    alt={`Cover of ${book.meta.title}`}
                  />
                  {progress && (
                    <div class="progress-indicator">
                      <span>{Math.round(progress.scrollPosition * 100)}%</span>
                    </div>
                  )}
                </div>
                <div class="book-info">
                  <h2>{book.meta.title}</h2>
                  <p class="book-author">{book.meta.author}</p>
                  <p class="book-description">{book.meta.description}</p>
                </div>
              </article>
            </a>
          );
        })}
      </div>
    )}
  </div>
</Layout>

<style>
  .library-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .library-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .library-header h1 {
    font-size: 2.5rem;
    margin: 0 0 0.5rem 0;
  }

  .library-header p {
    color: var(--text-color);
    opacity: 0.7;
    margin: 0;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--card-bg);
    border-radius: 12px;
  }

  .books-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 2rem;
  }

  .book-card-link {
    text-decoration: none;
    color: inherit;
  }

  .book-card {
    background: var(--card-bg);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .book-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .book-cover {
    position: relative;
    width: 100%;
    padding-top: 150%; /* 2:3 aspect ratio */
    overflow: hidden;
  }

  .book-cover img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .progress-indicator {
    position: absolute;
    bottom: 10px;
    right: 10px;
    background: var(--accent-color);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .book-info {
    padding: 1rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .book-info h2 {
    font-size: 1.1rem;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .book-author {
    font-size: 0.9rem;
    color: var(--text-color);
    opacity: 0.7;
    margin: 0 0 0.75rem 0;
  }

  .book-description {
    font-size: 0.85rem;
    color: var(--text-color);
    opacity: 0.8;
    margin: 0;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 640px) {
    .books-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 1rem;
    }
  }
</style>
